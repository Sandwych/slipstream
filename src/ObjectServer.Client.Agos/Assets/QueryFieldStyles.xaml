<ResourceDictionary xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
  xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
  xmlns:appControls="clr-namespace:ObjectServer.Client.Agos.Controls"
  xmlns:fw="clr-namespace:System.Windows.Controls;assembly=FloatableWindow"
  xmlns:fields="clr-namespace:ObjectServer.Client.Agos.Windows.FormView"
  xmlns:queryFields="clr-namespace:ObjectServer.Client.Agos.Windows.TreeView.QueryFieldControls"
  xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input">

    <!-- 查询条件表单 -->
    <Style TargetType="queryFields:BooleanQueryFieldControl">
        <Setter Property="Margin" Value="5,3,5,3" />
        <Setter Property="Height" Value="Auto" />
    </Style>

    <Style TargetType="queryFields:StringQueryFieldControl">
        <Setter Property="Margin" Value="5,3,5,3" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style TargetType="queryFields:EnumerationQueryFieldControl">
        <Setter Property="Margin" Value="5,3,5,3" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style TargetType="queryFields:DateQueryFieldControl">
        <Setter Property="Margin" Value="5,3,5,3" />
        <Setter Property="Height" Value="24" />
    </Style>

    <Style TargetType="queryFields:IntegerQueryFieldControl">
        <Setter Property="Margin" Value="5,3,5,3" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="queryFields:IntegerQueryFieldControl">
                    <Grid x:Name="Root">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <toolkit:NumericUpDown x:Name="LowUpDown" Grid.Column="0" Background="White" Maximum="999999999" Minimum="-999999999" />
                        <!-- TODO 国际化 -->
                        <TextBlock Text="至" Grid.Column="1" VerticalAlignment="Center" Margin="3,0,3,0"  />
                        <toolkit:NumericUpDown x:Name="HighUpDown" Grid.Column="2" Background="White" Maximum="999999999" Minimum="-99999999" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
