<controls:FloatableWindow x:Class="ObjectServer.Client.Agos.Controls.SelectionDialog"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=FloatableWindow"
           Width="562" Height="373"  MinHeight="240" MinWidth="480"
           Title="查询并选择记录" Background="#FFF0F0F0" xmlns:my="clr-namespace:ObjectServer.Client.Agos.Windows.TreeView">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <my:TreeView Grid.Row="0" x:Name="treeView1" BorderThickness="1" BorderBrush="#FF999999"  />

        <Rectangle Grid.Row="1" Fill="#FF999999" Height="1" Margin="0,5,0,5" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,0,5">
            <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="75" Height="23" Grid.Row="1" />
            <Rectangle Width="10"/>
            <Button x:Name="CancelButton" Content="取消" Click="CancelButton_Click" Width="75" Height="23" Grid.Row="1" />
        </StackPanel>
    </Grid>
</controls:FloatableWindow>